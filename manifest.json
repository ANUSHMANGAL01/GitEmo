{
  "manifest_version": 2,
  "name": "GitEmo",
  "description": "Augment Github with Emotions",
  "version": "1.0.1",
  "minimum_chrome_version": "49",
  "author": "Anush Mangal",
  "permissions": [
    "tabs",
    "*://*.github.com/*",
    "storage",
    "webRequest",
    "webNavigation"
  ],
 
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "css": ["style.css"],
      "js": [
        "js/jquery-3.3.1.min.js",
        "githubEmo.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
